<div class="card">
  <div class="indicator">
    <img src="/assets/water.png">
  </div>
    {{outlet}}
  <div class="header">
    <h1>Today <i {{bindAttr class="goalMet:icon-ok goalMet:icon-white"}}></i></h1>
  </div>
  <div class="reading">
    <h2 class="current-total"> {{ total }} <span class="unit">Ounces</span></h2>
    <h3 class="goal">Goal of {{goal}} ounces</h3>
  </div>
  <div class="actions">
    {{#linkTo day/entries.new class="btn btn-large btn-block btn-info" }}Record Water{{/linkTo}}
  </div>
</div>
